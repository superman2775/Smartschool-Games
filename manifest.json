{
  "manifest_version": 3,
  "name": "Smartschool Games",
  "version": "1.0.0",
  "description": "Open verschillende games via het vakken menu in Smartschool.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://*.smartschool.be/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.smartschool.be/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ]
}
